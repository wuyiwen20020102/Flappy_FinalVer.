<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:background="#FFFFFF"
    android:visibility="visible">

    <TextView
        android:id="@+id/title1"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:rotationX="0"
        android:text="1. For touch control, tap the screen to increase the height of the bird."
        android:textColor="#000000"
        android:textSize="42sp"
        android:translationY="50dp"
        android:translationX="10dp"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:rotationX="0"
        android:text="2. For voice control, speak anyhting to increase the height of the bird."
        android:textColor="#000000"
        android:textSize="42sp"
        android:translationY="300dp"
        android:translationX="10dp"/>

    <Button
        android:id="@+id/back_ins"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/slkscreb"
        android:onClick="back"
        android:text="@string/over_menu_button2"
        android:textColor="#FFEB3B"
        android:textSize="24sp" />

</RelativeLayout>